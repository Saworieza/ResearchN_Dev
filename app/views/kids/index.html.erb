<h1>Listing kids</h1>
<% @events.each do |event| %>
  <h3><%= event.title %> »</h3>
  <p>
    <%= truncate(strip_tags(event.detail), length: 70) %>
    <br>
    <a href="">Read more »</a>
  </p>
  <hr>
<% end %>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kid', new_kid_path %>
