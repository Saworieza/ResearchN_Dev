<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">
    <div class="row">
      <div class="span6">  
        <%= image_tag(@profile.image.url(:medium), class: "align-left thumbnail", alt: "image") %>
        <%= f.file_field :image %>
      </div>
      <div class="span6">
        <ul class="project-info">
          <li><h6>Name :</h6><br><h2><%= f.text_field :name %></h2></li>
          <li><h6>Short Description :</h6><br><p><%= f.text_field :short_description %></p></li>
       
          <li><h6>Technical Bucket :</h6><br> <%= f.text_field :technical_bucket %></li>
          <li><h6>Residence :</h6><br> <%= f.text_field :residence %></li>
          <li><h6>Nationality :</h6><br> <%= f.text_field :nationality %> </li>
          <li>
            <!--activate if current user logged in-->
            <div class="actions"><%= f.submit %></div>  
          </li>
       </ul>
    </div>
  </div>
</div>

<% end %>
