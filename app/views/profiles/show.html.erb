<p id="notice"><%= notice %></p>
<div class="row">
    <div class="row">
      <div class="span6">  
        <%= image_tag(@profile.image.url(:medium), class: "align-left thumbnail", alt: "image") %></td>
      </div>
      <div class="span6">
       <h2><%= @profile.name %></h2>
       <p><%= @profile.short_description %></p>
       <ul class="project-info">
           <li><h6>Technical Bucket :</h6> <%= @profile.technical_bucket %></li>
           <li><h6>Residence :</h6> <%= @profile.residence %></li>
           <li><h6>Nationality :</h6> <%= @profile.nationality %></li>
           <li>
            <!--activate if current user logged in-->
            <%= link_to 'Profiles', profiles_path %>  |
            <%= link_to 'Edit', edit_profile_path(@profile) %>  |
            <%= link_to 'Delete', @profile, method: :delete, data: { confirm: 'Are you sure?' } %>
           </li>
       </ul>
    </div>
  </div>
</div>
