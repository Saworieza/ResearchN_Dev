    <!-- Page Content
    ================================================== --> 
    <div class="row">
<% @profiles.each do |profile| %>
    <div class="row">
      <div class="span6">  
        <%= link_to (image_tag profile.image.url(:medium), class: "align-left thumbnail", alt: "image"), profile %></td>
      </div>
      <div class="span6">
       <h2><%= profile.name %></h2>
       <p><%= profile.short_description %></p>
       <ul class="project-info">
           <li><h6>Technical Bucket :</h6> <%= profile.technical_bucket %></li>
           <li><h6>Residence :</h6> <%= profile.residence %></li>
           <li><h6>Nationality :</h6> <%= profile.nationality %></li>
           <li>
            <!--activate if current user logged in-->
            <%= link_to 'Show', profile %>
            <%= link_to 'Edit', edit_profile_path(profile) %>
            <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
           </li>
       </ul>
       <button class="btn btn-inverse pull-left" type="button"><%= link_to 'Back to Profiles', profile %></button>
    <% end %>
  
